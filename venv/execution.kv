
<login_window>:
    canvas.before:
        Color:
            rgba :  rgba("#067a6b")
        Rectangle:
            
            pos: self.pos
            size:self.size
    FloatLayout:
        ImageButton:
            source: "user.png"
            x: root.width/2.2
            y:root.height/1.5
            allow_stretch: True
            size_hint_x:0.99
        ImageButton:
            source: "arrow.png"
            x: root.width/2.2
            y:root.height/8
            on_press: app.login_screen_to_choice_window_screen()

        TextInput:
            pos: (root.width/5, root.height/2.02)
            size_hint: 0.0057*root.width , 0.00052*root.height

            multiline: False
            hint_text:'User Name'
            font_size: 0.027*root.height

        TextInput:
            pos: (root.width/5, root.height/3.02)
            size_hint: 0.0057*root.width , 0.00052*root.height

            multiline: False
            font_size: 0.027*root.height
            hint_text: 'Password :'
            bold:True

        GridLayout:
            cols:1

            size_hint_y:None
            orientation:"vertical"
            spacing: -20
            pos: root.width/1.2,root.height/9.5
            ImageButton:

                source: "add-user.png"
                on_press: app.loginscreen_to_create_profile_window()

            Label:

                text: "create"
                bold:True



<create_profile_window>:
    name : "create"
    phone:phone
    username:username
    password:password
    canvas.before:
        Color:
            rgba :  rgba("#067a6b")
        Rectangle:

            pos: self.pos
            size:self.size
    FloatLayout:
        TextInput:
            id:username
            pos: (root.width/5, root.height/1.32)
            size_hint: 0.0057*root.width , 0.00052*root.height

            multiline: False
            hint_text:'Enter User Name'
            font_size: 0.027*root.height
        TextInput:
            id:password
            pos: (root.width/5, root.height/1.70)
            size_hint: 0.0057*root.width , 0.00052*root.height

            multiline: False
            hint_text:'Enter Password'
            font_size: 0.027*root.height
        TextInput:
            id:phone
            pos: (root.width/5, root.height/2.4)
            size_hint: 0.0057*root.width , 0.00052*root.height

            multiline: False
            hint_text:'Enter Phone Number'
            font_size: 0.027*root.height
        ImageButton:
            source: "arrow.png"
            x: root.width/2.2
            on_press: app.create_profile_window_to_otp_window()
            y:root.height/8
        ImageButton:
            source: "return.png"
            x: 0
            y:root.height/1.13
            on_press: app.create_profile_window_to_login_window()
<otp_window>:
    canvas.before:
        Color:
            rgba :  rgba("#067a6b")
        Rectangle:

            pos: self.pos
            size:self.size
    FloatLayout:
        TextInput:
            pos: (root.width/5, root.height/1.32)
            size_hint: 0.0057*root.width , 0.00052*root.height

            multiline: False
            hint_text:'Enter OTP'
            font_size: 0.027*root.height

        Button:

            pos: (root.width/2.4, root.height/2.32)
            size_hint: 0.0015*root.width , 0.00052*root.height

            text: "RESEND"
            background_color:  rgba("#170678")
            bold:True
            font_size: 0.027*root.height
        ImageButton:
            source: "arrow.png"
            x: root.width/2.2
            y:root.height/8
        ImageButton:
            source: "return.png"
            x: 0
            y:root.height/1.13
            on_press: app.otp_window_to_create_profile_window()


<complete_registration_window>:
    canvas.before:
        Color:
            rgba :  rgba("#067a6b")
        Rectangle:

            pos: self.pos
            size:self.size
    FloatLayout:
        Label:
            pos: (root.width/5, root.height/1.32)
            size_hint: 0.0057*root.width , 0.00052*root.height
            text:'Account has successfully created !!'
            bold:True
            font_size: 0.050*root.height


        Button:

            pos: (root.width/2.4, root.height/2.32)
            size_hint: 0.0015*root.width , 0.00052*root.height
            background_color:  rgba("#170678")
            text: "OK"
            bold:True
            font_size: 0.027*root.height


