<new_meeting_window>:
    camera : camera
    chats : chats
    canvas.before:
        Color:
            rgba :  rgba("#067a6b")
        Rectangle:

            pos: self.pos
            size:self.size
    TabbedPanel:
        do_default_tab: False
        size: root.width,root.height*0.84

        pos:0,root.height/7
        TabbedPanelItem:
            text:"1st Tab"

            BoxLayout:

                size: 0.7*root.width,root.height*0.5
                Camera:

                    id: camera

                    play: True




        TabbedPanelItem:
            text:"2nd Tab"
            Label:
                text: "Content of Second Panel"

    GridLayout:

        cols:1

        size_hint_y:None
        orientation:"vertical"
        spacing: -20
        padding: -10
        pos: root.width/111.2,root.height/111.2
        ImageButton:

            source: "onmic.png"

        Label:

            text: "unmute mic"
            bold:True

    GridLayout:

        cols:1

        size_hint_y:None
        orientation:"vertical"
        spacing: -20
        padding: -10
        pos: root.width/6.8,root.height/111.2
        ImageButton:

            source: "video-camera.png"
            on_press: app.arun()
        Label:

            text: "Start Video"
            bold:True

    GridLayout:

        cols:1

        size_hint_y:None
        orientation:"vertical"
        spacing: -20
        padding: -10
        pos: root.width/3.2,root.height/111.2
        ImageButton:

            source: "question.png"

        Label:

            text: "Raise Hand"
            bold:True


    GridLayout:

        cols:1

        size_hint_y:None
        orientation:"vertical"
        spacing: -20
        padding: -10
        pos: root.width/1.97,root.height/111.2
        ImageButton:

            source: "chat.png"
            on_press: app.chat()
        Label:

            text: "Group Chats"
            bold:True


    GridLayout:

        cols:1

        size_hint_y:None
        orientation:"vertical"
        spacing: -20
        padding: -10
        pos: root.width/1.46,root.height/111.2
        ImageButton:

            source: "export.png"

        Label:

            text: "Share Screen"
            bold:True


    GridLayout:

        cols:1

        size_hint_y:None
        orientation:"vertical"
        spacing: -20
        padding: -10
        pos: root.width/1.12,root.height/111.2
        ImageButton:

            source: "remove.png"

        Label:

            text: "Leave"
            bold:True


    FloatLayout:
        id : chats
        opacity: 0


        TextInput:
            pos: (root.width/1.30, root.height/3.16)
            size_hint: 0.0022*root.width , 0.0051*root.height
            hint_text:'Chat'
            font_size: 0.027*root.height


        TextInput:
            pos: (root.width/1.30, root.height/4.81)
            size_hint: 0.0018*root.width , 0.0011*root.height
            disabled: True
            hint_text:'Type Area'
            font_size: 0.027*root.height

        Button:

            pos: (root.width/1.054, root.height/4.793)
            size_hint: 0.00041*root.width , 0.00109*root.height

            text: "SEND"
            background_color:  rgba("#170678")
            bold:True
            font_size: 0.027*root.height


